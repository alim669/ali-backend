# ================================
# Ali Backend Environment Variables
# ================================

# Server
NODE_ENV=development
PORT=3000

# Database (PostgreSQL)
DATABASE_URL="postgresql://ali_user:ali_password_123@localhost:5432/ali_db?schema=public"

# Prisma Migrations (Direct connection)
# إذا كنت تستخدم Neon/Vercel Postgres أو أي Pooler، غالباً تحتاج رابط مباشر للمهاجرات.
# مثال Neon: إذا كان DATABASE_URL يحتوي host مثل:
#   ep-xxxx-pooler.region.aws.neon.tech
# فـ DIRECT_DATABASE_URL يكون عادة:
#   ep-xxxx.region.aws.neon.tech
# ملاحظة: استخدم directUrl فقط للمهاجرات (migrate/dev/deploy) وتخلي DATABASE_URL للـ runtime.
DIRECT_DATABASE_URL="postgresql://USER:PASSWORD@ep-xxxx.region.aws.neon.tech/dbname?sslmode=require"

# Redis
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# Logging
LOG_LEVEL=debug
LOG_FILE_ENABLED=true

# ================================
# Email (SMTP) - اختياري
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@ali-app.com
SMTP_FROM_NAME=Ali App

# ================================
# Firebase (FCM) - للإشعارات الفورية
# ================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# ================================
# Agora (Voice/Video) - اختياري
# ================================
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-certificate

# ================================
# App URL (for email links)
# ================================
APP_URL=https://ali-app.com

