# ================================
# Ali Backend - Production Environment
# إعدادات الإنتاج - قم بتحديث القيم!
# ================================

# =========== Server ===========
NODE_ENV=production
PORT=3000
LOG_LEVEL=warn

# =========== Database (PostgreSQL) ===========
# Use your production database URL
DATABASE_URL="postgresql://ali_user:YOUR_STRONG_PASSWORD@localhost:5432/ali_db?schema=public"

# =========== Redis Cache ===========
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD
REDIS_ENABLED=true

# =========== JWT Security ===========
# Generate strong random secrets for production!
# Use: openssl rand -hex 32
JWT_SECRET=GENERATE_A_STRONG_64_CHAR_SECRET_HERE_USE_OPENSSL_RAND
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=GENERATE_ANOTHER_STRONG_64_CHAR_SECRET_HERE
JWT_REFRESH_EXPIRES_IN=7d

# =========== Encryption ===========
# Generate: openssl rand -hex 16
ENCRYPTION_KEY=GENERATE_32_CHAR_ENCRYPTION_KEY

# =========== Google OAuth ===========
GOOGLE_CLIENT_ID=your-production-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-production-google-client-secret

# =========== Rate Limiting ===========
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# =========== CORS ===========
# List your allowed origins
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# =========== File Upload ===========
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/var/www/uploads
BASE_URL=https://api.yourdomain.com

# =========== Security ===========
# Generate: openssl rand -hex 16
PASSWORD_SALT=GENERATE_STRONG_PASSWORD_SALT

# =========== Monitoring (Optional) ===========
GRAFANA_USER=admin
GRAFANA_PASSWORD=STRONG_GRAFANA_PASSWORD
